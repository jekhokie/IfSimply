<%- courses.each_with_index do |course, i| %>
  <div class="course <%= 'course-first' if i == 0 %>">
    <div class="course-logo">
      <div class="course-logo-container">
        <a class="course-image-link" href="<%= can?(:update, course) ? course_editor_path(course) : course_path(course) %>">
          <%= image_tag course.logo, :class => 'course-image' %>
        </a>
      </div>
    </div>

    <div class="course-title">
      <%= link_to course.title, (can?(:update, course) ? course_editor_path(course) : course_path(course)) %>
    </div>
  </div>
<%- end %>
