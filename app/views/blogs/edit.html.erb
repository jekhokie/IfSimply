<div class="blog-information">
  <%= render :partial => 'shared/welcome_navigation', :locals => { :club => @blog.club } %>

  <div class="blog-container row-fluid">
    <div class="blog-image span3">
      <%= image_tag "#{@blog.image}" %>

      <%- if can? :update, @blog %>
        <a href="<%= change_image_for_blog_path(@blog) %>" data-remote="true" class="btn btn-primary upload-image-button">Change Image</a>

        <div class="free-select">
          (Free?
          <%= best_in_place @blog, :free, :type       => :checkbox,
                                          :path       => blog_path(@blog),
                                          :html_attrs => { :rows => '1' } %>
          )
        </div>
      <%- end %>
    </div>

    <div class="blog-title-content span9">
      <h1 class="blog-title">
        <%= best_in_place_if can?(:update, @blog), @blog, :title, :type => :input, :html_attrs => { :rows => '1' } %>
      </h1>

      <p class="blog-content">
        <%= best_in_place_if can?(:update, @blog), @blog, :content, :display_with => :markdown_to_html, :type => :textarea, :html_attrs => { :rows => '10' } %>
      </p>
    </div>
  </div>
</div>
