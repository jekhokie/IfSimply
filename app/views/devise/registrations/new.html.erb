<div class="devise-information">
  <div class="devise-heading">You are almost there!</div>
  <div class="devise-sub-heading">Just need a little information to get started</div>

  <%= simple_form_for(resource, :as     => resource_name,
                                :url    => registration_path(resource_name),
                                :remote => true) do |f| %>
    <div class="devise-errors">
      <%= flash[:alert] unless flash[:alert].blank? %>
    </div>

    <div class="signup-elements">
      <div class="name-fields">
        <%= f.input :name, :autofocus => true, :required => true, :placeholder => "Name", :label => "Name" %>
      </div>

      <div class="email-fields">
        <%= f.input :email, :required => true, :placeholder => "Email" %>
      </div>

      <div class="password-fields">
        <%= f.input :password, :required => true, :placeholder => "Password" %>
      </div>

      <div class="password-confirmation-fields">
        <%= f.input :password_confirmation, :required => true, :placeholder => "Password Confirmation" %>
      </div>

      <div class="terms-agreement">
        <%= check_box_tag :policy_agree, :true %> I agree to the <%= link_to "Terms and Conditions", terms_and_conditions_path, :target => "_blank" %>
      </div>

      <div class="signup"><%= f.submit "Sign Up", :class => "btn btn-warning" %></div>
    </div>
  <% end %>

  <div class="sign-in-link">
    <span class="sign-in-label">Already a member?</span> <%= link_to "Sign in Here", new_session_path(resource_name), :remote => true %>
  </div>

  <%= render :partial => "shared/powered_by" %>
</div>
