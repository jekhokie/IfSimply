<%- if video_url =~ /.*(youtube|youtu\.be).*/ %>
  <video id="vid_<%= id %>" class="video-js vjs-default-skin vjs-big-play-centered" controls preload="auto" width="100%" height="100%" data-setup='{ "techOrder": [ "youtube" ], "src": "<%= video_url %>" }'>
  </video>
<%- elsif video_url =~ /.*(vimeo).*/ %>
  <video id="vid_<%= id %>" class="video-js vjs-default-skin vjs-big-play-centered" controls preload="auto" width="100%" height="100%" data-setup='{ "techOrder": [ "vimeo" ], "src": "<%= video_url %>" }'>
  </video>
<%- elsif video_url =~ /.*(slideshare).*/ %>
  <iframe id="vid_<%= id %>" src="<%= video_url %>" frameborder="0" width="100%" height="100%" webkitAllowFullScreen mozAllowFullScreen allowFullScreen>
  </iframe>
<%- elsif controller_name == 'home' # handle home page and thank you videos %>
  <video id="vid_<%= id %>" class="video-js vjs-default-skin vjs-big-play-centered" controls preload="auto" width="100%" height="100%" data-setup>
    <source type="video/mp4"  src="/assets/<%= video_url %>.mp4"  codecs="avc1.42E01E, mp4a.40.2" />
    <source type="video/webm" src="/assets/<%= video_url %>.webm" codecs="vp8, vorbis"            />
    <source type="video/ogg"  src="/assets/<%= video_url %>.ogv"  codecs="theora, vorbis"         />
  </video>
<%- end %>
