<div class="new-post">
  <div class="new-post-heading">
    New Post
  </div>

  <div class="new-post-form">
    <%= simple_form_for [ topic, post ], :remote => true, :validate => true do |f| %>
      <%= f.input :content, :label => false, :type => :textarea, :html_attrs => { :rows => '10' } %>

      <%= f.submit "Submit Post", :class => "btn btn-primary" %>
      <a href="<%= topic_path(topic) %>" class="btn btn-primary">Cancel</a>
    <%- end %>
  </div>
</div>
